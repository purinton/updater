{
    "name": "@purinton/updater",
    "type": "module",
    "version": "1.0.3",
    "description": "Automated system updater and service manager for Red Hat-based Linux servers via SSH (yum/dnf). Not for Debian/Ubuntu.",
    "main": "updater.mjs",
    "scripts": {
        "start": "node updater.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/updater.git"
    },
    "keywords": [
        "updater",
        "nodejs",
        "yum",
        "dnf",
        "redhat",
        "centos",
        "fedora",
        "rocky",
        "alma",
        "linux",
        "ssh",
        "systemd",
        "automation",
        "service management"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/updater/issues"
    },
    "homepage": "https://github.com/purinton/updater#readme",
    "devDependencies": {
        "jest": "^30.0.2"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.16",
        "@purinton/discord-webhook": "^1.0.3",
        "@purinton/ssh-client": "^1.0.1",
        "dotenv": "^16.5.0",
        "node-cron": "^4.1.0"
    }
}